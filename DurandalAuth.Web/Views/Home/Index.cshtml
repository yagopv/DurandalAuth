@using System.Web.Optimization
<!DOCTYPE html>
<html>
	<head>
		<title>Durandal Auth</title>
		
		<meta charset="utf-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black" />
		<meta name="format-detection" content="telephone=no"/>
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		
		<link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-landscape.png" media="(orientation:landscape)" />
		<link rel="apple-touch-startup-image" href="~/Content/images/ios-startup-image-portrait.png" media="(orientation:portrait)" />
		<link rel="apple-touch-icon" href="~/Content/images/icon.png"/>
		
		@Styles.Render("~/Content/css")
		@Styles.Render("~/Content/custom")

		<script type="text/javascript">
			if (navigator.userAgent.match(/IEMobile\/10\.0/)) {
				var msViewportStyle = document.createElement("style");
				var mq = "@@-ms-viewport{width:auto!important}";
				msViewportStyle.appendChild(document.createTextNode(mq));
				document.getElementsByTagName("head")[0].appendChild(msViewportStyle);
			}
		</script>
        @Html.Partial("Analytics")
	</head>
	<body>
		<div class="st-sticky-wrap" id="applicationHost">
			@Html.Partial("_splash")
		</div>
		@Html.Partial("Footer")
		
		@Scripts.Render("~/scripts/vendor")
		
		@if(HttpContext.Current.IsDebuggingEnabled) {
			<script type="text/javascript" src="@Url.Content("~/Scripts/require.js")" data-main="@Url.Content("~/App/main")"></script>
		} else {
			<script type="text/javascript" src="@Url.Content("~/App/main-built.js")"></script>			
		}
	</body>
</html>